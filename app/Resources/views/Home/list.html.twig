{% extends 'base.html.twig' %}

{% block body %}



 <h1 class="head-header"> Todo List </h1>
 <table class="table table-striped">
  <thead>
  <tr>
   <th scope="col">#</th>
   <th scope="col">To Do</th>
   <th scope="col">Due Date</th>
   <th scope="col">Handle</th>
  </tr>
  </thead>
  <tbody>

  {% for todos in todo %}
  <tr>
   <th scope="row">{{ todos.name }}</th>
   <td>{{ todos.category }}</td>
   <td>{{ todos.dueDate|date('F j, Y, g:i') }}</td>
   <td>
    <a href="todo/detail/{{ todos.id }}">  <div class="btn btn-success">View</div> </a>
    <a href="todo/edit/{{ todos.id }}">  <div class="btn btn-primary">Edit</div> </a>
    <a href="todo/delete/{{ todos.id }}"> <div class="btn btn-danger">Delete</div></a>
   </td>
  </tr>
{% endfor %}

  </tbody>
 </table>

{% endblock %}